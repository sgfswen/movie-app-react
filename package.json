{
  "name": "React: Movie App Example",
  "version": "1.0.0",
  "description": "A movie app using react.js",
  "scripts": {
    "build:js": "browserify -d src/javascripts/main.js|uglifyjs -mc > dist/bundle.js -t [babelify]",
    "build:css": "node-sass src/scss/style.scss dist/styles.css && npm run autoprefixer",
    "build:html": "htmlmin -o dist/index.html src/index.js",
    "build:imgs": "imagemin src/images dist/images -p",
    "build": "npm run build:js & npm run build:css & npm run build:html & npm run build:imgs",
    "prebuild": "npm run clean",
    "watch:js": "watchify -d src/javascripts/main.js -o dist/bundle.js -t [babelify]",
    "watch:css": "onchange \"src/scss/*.scss\" -- npm run build:css",
    "browsersync": "browsersync start --proxy \"localhost:8080\" --files \"dist\"",
    "nodemon": "nodemon server.js --watch routes --watch models --watch lib",
    "autoprefixer": "postcss --use autoprefixer -r dist/styles.css",
    "test:browser": "karma start",
    "test:node": "mocha -u bdd -R spec tests/**/*.js",
    "test": "npm run test:node & npm run test:browser",
    "clean": "rm dist/*",
    "start": "npm run build",
    "watch": "shell-exec \"npm run browsersync\" \"npm run nodemon\"",
    "prewatch": "shell-exec \"npm run watch:js\" \"npm run watch:css\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AdelJS/movie-app-react.git"
  },
  "keywords": ["react", "movie", "app"],
  "author": {
    "name": "Adel Jojo",
    "twitter": "@bigfanjs",
    "email": "bigfanjs@gmail.com"
  },
  "license": "ISC",
  "dependencies": {
    "react": "15.4.1",
    "react-dom": "15.4.1",
    "react-redux": "5.0.2",
    "redux": "3.6.0",
    "express": "4.14.0",
    "lodash": "4.17.2"
  },
  "devDependencies": {
    "browserify": "13.0.1",
    "browser-sync": "2.12.8",
    "karma": "1.1.2",
    "mocha": "3.0.2",
    "karma-mocha": "1.1.1",
    "karma-chai": "0.1.0",
    "karma-browserify": "5.1.0",
    "nodemon": "1.10.2",
    "wathcify": "3.7.0",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-react": "6.6.0",
    "babelify": "7.3.0",
    "shell-executor": "0.3.2",
    "imagemin": "5.2.2",
    "htmlmin": "0.0.7",
    "onchange": "3.2.1"
  }
}